
@{
    ViewBag.Title = "MarketOperations";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@model List<hali.DAL.DB.Market>

<h2>Market İşlemleri</h2>


<div class="btn-group">
    <div class="buttonexport">
        <button type="button" onclick="MarketEkle()" id="showPanelMarketBtn" class="btn btn-add" data-toggle="modal">
            <i class="fa fa-plus"></i> Ekle
        </button>
    </div>


</div>

<!-- Plugin content:powerpoint,txt,pdf,png,word,xl -->
<div class="table-responsive">
    <table id="dataTableExample1" class="table table-bordered table-striped table-hover">
        <thead>
            <tr class="info">
                <th>Market İsmi</th>
                <th>Komisyon Ücreti</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MarketName</td>
                    <td>@item.ComissionPrice</td>
                    <td>
                        <button type="button" onclick="showUpdateMarket(@item.ID)" class="btn btn-add btn-xs" data-toggle="modal" ><i class="fa fa-pencil"></i></button>
                    </td>

                </tr>
            }

        </tbody>

    </table>
</div>



<section id="duzenlemeEkrani" class="content hidden">
    <div class="row">
        <!-- Form controls -->
        <div class="col-sm-12">
            <div class="panel panel-bd lobidrag">
                <div class="panel-heading">
                    <div class="btn-group" id="buttonexport">
                        <a href="#">
                            <h4>Marketi Düzenle</h4>
                        </a>
                    </div>
                </div>
                <div class="panel-body">
                    <form class="col-sm-6">
                        <div class="form-group">
                            <label>Market İsmi</label>
                            <input id="marketDznIsmi" type="text" class="form-control" placeholder="Market İsmi Gir" required>
                        </div>

                        <div class="form-group">
                            <label>Komisyon Ücreti</label>
                            <input id="komisyonDznIsmi" type="number" class="form-control" placeholder="Komisyom Ücreti Gir" required>
                        </div>

                        <div class="reset-button">
                            <a href="#" onclick="resetDznMarket()" class="btn btn-warning">Reset</a>
                            <a href="#" id="saveMarketNameBtn" class="btn btn-add">Düzenle</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>



    </div>
</section>


<section id="showPanelMarket" class="content hidden">
    <div class="row">
        <!-- Form controls -->
        <div class="col-sm-12">
            <div class="panel panel-bd lobidrag">
                <div class="panel-heading">
                    <div class="btn-group" id="buttonexport">
                        <a href="#">
                            <h4>Market İsmini ve Komisyon Ücretini Düzenle</h4>
                        </a>
                    </div>
                </div>
                <div class="panel-body">
                    <form class="col-sm-6">
                        <div class="form-group">
                            <label>Market İsmi</label>
                            <input id="marketIsmi" type="text" class="form-control" placeholder="Market İsmi Giriniz" required>
                            <label>Komisyon Ücreti</label>
                            <input id="komisyonUcreti" type="number" class="form-control" placeholder="Komisyon Ücreti Giriniz" required>
                        </div>

                        <div class="reset-button">
                            <a href="#" onclick="resetMarketInfo()" class="btn btn-warning">Reset</a>
                            <a href="#" id="saveMarketNameBtn" class="btn btn-add">Kaydet</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>



    </div>
</section>