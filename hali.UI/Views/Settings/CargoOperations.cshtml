
@{
    ViewBag.Title = "CargoOperations";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@model List<hali.DAL.DB.Cargo>

<div class="btn-group">
    <div class="buttonexport">
        <button type="button" onclick="CargoEkle()" id="showPanelCargoBtn" class="btn btn-add" data-toggle="modal" >
            <i class="fa fa-plus"></i> Ekle 
        </button>
    </div>


</div>

<!-- Plugin content:powerpoint,txt,pdf,png,word,xl -->
<div class="table-responsive">
    <table id="dataTableExample1" class="table table-bordered table-striped table-hover">
        <thead>
            <tr class="info">
                <th>Kargo İsmi</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CargoName</td>
                    <td>
                        <button onclick="showUpdateCargo(@item.ID)" type="button" class="btn btn-add btn-xs" data-toggle="modal" data-target="#update"><i class="fa fa-pencil"></i></button>
                        <button type="button" onclick="silPopUpShow(@item.ID)" id="InActiveBtn" class="btn btn-info btn-xs" data-toggle="modal" data-target="#customer2">Pasif Yap</button>
                    </td>
                </tr>
            }

        </tbody>

    </table>
</div>
<section id="showPanelCargo" class="content hidden">
    <div class="row">
        <!-- Form controls -->
        <div class="col-sm-12">
            <div class="panel panel-bd lobidrag">
                <div class="panel-heading">
                    <div class="btn-group" id="buttonexport">
                        <a href="#">
                            <h4>Kargo ismi Düzenle</h4>
                        </a>
                    </div>
                </div>
                <div class="panel-body">
                    <form class="col-sm-6">
                        <div class="form-group">
                            <label>Kargo İsmi</label>
                            <input id="kargoIsmi" type="text" class="form-control" placeholder="Enter Name" required>
                        </div>

                        <div class="reset-button">
                            <a href="#" class="btn btn-warning">Reset</a>
                            <a href="#" id="saveCargoNameBtn" class="btn btn-add">Düzenle</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>



    </div>
</section>

<section id="showPanelCargoName" class="content hidden">
    <div class="row">
        <!-- Form controls -->
        <div class="col-sm-12">
            <div class="panel panel-bd lobidrag">
                <div class="panel-heading">
                    <div class="btn-group" id="buttonexport">
                        <a href="#">
                            <h4>Kargo İsmi Ekle</h4>
                        </a>
                    </div>
                </div>
                <div class="panel-body">
                    <form class="col-sm-6">
                        <div class="form-group">
                            <label>Kargo İsmi</label>
                            <input id="ekleKargoIsmi" type="text" class="form-control" placeholder="Enter Name" required>
                        </div>

                        <div class="reset-button">
                            <a id="ekleInputReset" class="btn btn-warning">Sıfırla</a>
                            <a href="#" id="ekleCargoNameBtn" class="btn btn-add">Kargo Ekle</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>



    </div>
</section>

<div class="modal fade" id="customer2" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header modal-header-primary">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3><i class="fa fa-user m-r-5"></i> Kargoyu Pasifleştirme Ekranı</h3>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <form class="form-horizontal">
                            <fieldset>
                                <div class="col-md-12 form-group user-form-group">
                                    <label class="control-label">Kargoyu Pasifleştirmek İstediğinden Eminmisin ?</label>
                                    <div class="pull-right">
                                        <button type="button"  data-dismiss="modal" class="btn btn-danger btn-sm">NO</button>
                                        <button type="submit" id="silKargo" class="btn btn-add btn-sm">YES</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger pull-left" data-dismiss="modal">Close</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>